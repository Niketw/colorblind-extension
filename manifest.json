{
  "name": "Colorblindness Corrector",
  "description": "Correct 8 types of colorblindness on your browser!",
  "version": "2.0.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_title": "Colorblindness corrector",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "eye16.png",
    "48": "eye48.png",
    "128": "eye128.png"
  }
}
